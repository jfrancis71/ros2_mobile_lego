<?xml version="1.0" ?>
<!-- ROS2 Control Hardware Plugin for BrickPi3 -->
<robot name="kitt">
  <link name="base_link"></link>
  <link name="left_wheel"></link>
  <link name="right_wheel"></link>
  <link name="steering_wheel"></link>
  <joint name="PORT_A" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
  </joint>
  <joint name="PORT_D" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
  </joint>
  <joint name="PORT_B" type="continuous">
    <parent link="base_link"/>
    <child link="steering_wheel"/>
  </joint>
  <ros2_control name="BrickPi3" type="system">
    <hardware>
      <plugin>brickpi3_motors/BrickPi3MotorsHardware</plugin>
      <param name="hw_start_duration_sec">0</param>
      <param name="hw_stop_duration_sec">3.0</param>
    </hardware>
    <joint name="PORT_A">
      <command_interface name="velocity"/>
      <param name="gear_ratio">-1.0</param>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="PORT_D">
      <command_interface name="velocity"/>
      <param name="gear_ratio">-1.0</param>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="PORT_B">
      <command_interface name="position"/>
      <param name="gear_ratio">-0.625</param>
      <param name="hw_min_position_limit">-70.0</param>
      <param name="hw_max_position_limit">70.0</param>
      <param name="hw_position_zero_start_power">20.0</param>
      <param name="hw_position_zero_start_wait_time">100.0</param>
      <param name="hw_position_zero_stall_dps_threshold">30.0</param>
      <param name="hw_position_zero_relative">-100.0</param>
      <param name="hw_position_zero_relative_wait_time">3000.0</param>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>
</robot>
